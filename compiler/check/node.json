{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": "off",
        "indent": "off",
        "linebreak-style": "off",
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": ["warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
        "no-use-before-define": ["error", { "functions": true, "classes": true, "variables": false }],
        "no-constant-condition": 1
    },
    "globals":
    {
      "__njs_typeof":false,
      "require":false
    }
}
